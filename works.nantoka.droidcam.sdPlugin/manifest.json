            "Tooltip": "Display device battery status",
            "Controllers": [
                "Keypad"
            ],
            "PropertyInspectorPath": "ui/battery-status.html",
            "States": [
                {
                    "Image": "icons/battery",
                    "TitleAlignment": "bottom",
                    "FontSize": 12,
                    "ShowTitle": true
                }
            ]
        },
        {
            "UUID": "works.nantoka.droidcam.zoom-control",
            "Name": "Zoom Control",
            "Icon": "icons/menu-zoom-control",
            "Tooltip": "Control zoom with dial or button reset",
            "Controllers": [
                "Encoder"
            ],
            "PropertyInspectorPath": "ui/zoom-control.html",
            "Encoder": {
                "layout": "$B1",
                "Icon": "icons/zoom-control",
                "TriggerDescription": {
                    "Rotate": "Adjust zoom level",
                    "Push": "Reset zoom to 1.0x"
                }
            },
            "States": [
                {
                    "Image": "icons/zoom-control",
                    "TitleAlignment": "bottom",
                    "FontSize": 12,
                    "ShowTitle": true
                }
            ]
        },
        {
            "UUID": "works.nantoka.droidcam.exposure-control",
            "Name": "Exposure Control",
            "Icon": "icons/menu-exposure-control",
            "Tooltip": "Control exposure with dial or button reset",
            "Controllers": [
                "Encoder"
            ],
            "PropertyInspectorPath": "ui/exposure-control.html",
            "Encoder": {
                "layout": "$B1",
                "Icon": "icons/exposure-control",
                "TriggerDescription": {
                    "Rotate": "Adjust exposure value",
                    "Push": "Reset exposure to 0"
                }
            },
            "States": [
                {
                    "Image": "icons/exposure-control",
                    "TitleAlignment": "bottom",
                    "FontSize": 12,
                    "ShowTitle": true
                }
            ]
        }
