{
    "Name": "DroidCam",
    "Version": "1.0.2.79",
    "Author": "nantokaworks",
    "Actions": [
        {
            "Name": "Connection Status",
            "UUID": "works.nantoka.droidcam.connection-status",
            "Icon": "icons/disconnected",
            "Tooltip": "Shows DroidCam connection status",
            "PropertyInspectorPath": "ui/connection-status.html",
            "Controllers": [
                "Keypad"
            ],
            "States": [
                {
                    "Image": "icons/disconnected",
                    "TitleAlignment": "middle"
                },
                {
                    "Image": "icons/connected",
                    "TitleAlignment": "middle"
                }
            ]
        },
        {
            "UUID": "works.nantoka.droidcam.zoom-button",
            "Name": "ズームボタン",
            "Icon": "icons/menu-zoom-button",
            "Tooltip": "ズームレベルをプリセット切り替え",
            "Controllers": [
                "Keypad"
            ],
            "PropertyInspectorPath": "ui/zoom-button.html",
            "States": [
                {
                    "Image": "icons/zoom-in",
                    "TitleAlignment": "bottom",
                    "FontSize": 12,
                    "ShowTitle": true
                }
            ]
        },
        {
